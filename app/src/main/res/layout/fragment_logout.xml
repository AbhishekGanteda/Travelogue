<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/main"
    android:paddingTop="50dp"
    android:fontFamily="@font/hostgroteskvariablefont_wght"
    android:layout_width="match_parent"
    android:background="@color/orange"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LogoutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:textColor="@color/white"
            android:fontFamily="@font/hostgrotesk_variablefont_wght"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="8"/> <!-- Makes it perfectly center-aligned -->

        <ImageButton
            android:id="@+id/backSignIn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/baseline_more_horiz_24"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"
        android:background="@drawable/profile_border"
        android:elevation="10dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        />

    <LinearLayout
        android:padding="25dp"
        android:layout_gravity="center"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"> <!-- Background color matches curve -->
        <!-- Top Curve Background -->
        <LinearLayout
            android:layout_marginTop="45dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:text="James bond"
                android:textSize="25dp"
                android:fontFamily="@font/hostgroteskvariablefont_wght"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/hostgroteskvariablefont_wght"
                android:text="Software Engineer with expertise in front-end development (HTML, CSS, JavaScript) and mobile app development (Kotlin, XML). Skilled in backend technologies, including Express.js and Spring Boot."
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Followers"
                    android:textSize="17.5dp"
                    android:fontFamily="@font/hostgroteskvariablefont_wght"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="25k"
                    android:textSize="15dp"
                    android:fontFamily="@font/hostgroteskvariablefont_wght"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Followers"
                    android:textSize="17.5dp"
                    android:fontFamily="@font/hostgroteskvariablefont_wght"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="25k"
                    android:textSize="15dp"
                    android:fontFamily="@font/hostgroteskvariablefont_wght"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Followers"
                    android:textSize="17.5dp"
                    android:fontFamily="@font/hostgroteskvariablefont_wght"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="25k"
                    android:textSize="15dp"
                    android:fontFamily="@font/hostgroteskvariablefont_wght"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
>

            <!-- Fixed TextView -->
            <TextView
                android:textColor="@color/black"
                android:layout_gravity="start"
                android:gravity="start"
                android:textSize="20dp"
                android:text="Friends:"
                android:fontFamily="@font/hostgroteskvariablefont_wght"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Horizontal scrollable area -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- ImageViews -->
                    <ImageView
                        android:id="@+id/profile_image2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="7.5dp"
                        android:background="@drawable/profile_border"
                        android:elevation="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                    <ImageView
                        android:id="@+id/profile_image3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="7.5dp"
                        android:background="@drawable/profile_border"
                        android:elevation="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                    <ImageView
                        android:id="@+id/profile_image23"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="7.5dp"
                        android:background="@drawable/profile_border"
                        android:elevation="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                    <ImageView
                        android:id="@+id/profile_image236"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="7.5dp"
                        android:background="@drawable/profile_border"
                        android:elevation="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                    <ImageView
                        android:id="@+id/profile_image21"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="7.5dp"
                        android:background="@drawable/profile_border"
                        android:elevation="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                    <ImageView
                        android:id="@+id/profile_image28"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="7.5dp"
                        android:background="@drawable/profile_border"
                        android:elevation="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                    <ImageView
                        android:id="@+id/profile_image27"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="7.5dp"
                        android:background="@drawable/profile_border"
                        android:elevation="10dp"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</ScrollView>