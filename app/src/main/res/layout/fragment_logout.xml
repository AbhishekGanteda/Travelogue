<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/orange"
    tools:context=".LogoutFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hostgrotesk_variablefont_wght"
        android:textStyle="bold"
        android:text="Are you sure you want to logout?"
        android:textSize="18sp"
        android:textColor="@color/darkest"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:fontFamily="@font/hostgrotesk_variablefont_wght"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/random2"
        android:backgroundTint="#F46D3B"
        android:padding="12dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
